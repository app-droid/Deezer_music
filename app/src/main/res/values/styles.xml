<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitleStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="TextHeaderStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextHeaderStyle.Position">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/card_background</item>

    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_margin_size_small</item>
        <item name="cardElevation">@dimen/elevation</item>
    </style>

    <style name="CardViewStyle.DarkBack">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">162dp</item>

    </style>

    <style name="RVStyle">
        <item name="android:layout_marginTop">@dimen/margin_padding_margin_size_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

</resources>